{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "environment: setup dynamic",
      "type": "shell",
      "command": "bash",
      "args": ["./scripts/setup-env.sh"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "environment: activate conda",
      "type": "shell",
      "command": "${env:CONDA_CMD}",
      "args": ["activate", "${env:CONDA_DEFAULT_ENV}"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": [],
      "dependsOn": "environment: setup dynamic"
    },
    {
      "label": "frontend: install",
      "type": "npm",
      "script": "install",
      "path": "frontend",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "frontend: dev",
      "type": "npm",
      "script": "dev",
      "path": "frontend",
      "isBackground": true,
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": {
        "owner": "vite",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "^\\s*(.*)$",
          "file": 1
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^\\s*vite v.*",
          "endsPattern": "Local:.*http://localhost:5173/"
        }
      }
    },
    {
      "label": "frontend: build",
      "type": "npm",
      "script": "build-only",
      "path": "frontend",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    }
  ]
}
